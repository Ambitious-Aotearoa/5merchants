{% set cart = craft.commerce.carts.cart %}
<div class="modal fade" id="cartSummary" tabindex="-1" aria-labelledby="yourItems" aria-hidden="true" data-bs-keyboard="true">
    <div class="modal-dialog modal-fullscreen modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header d-flex flex-row justify-content-between px-1 py-2 p-highRes-2vw">
                <h2 class="cust-font-5" id="yourItems">Your items</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body d-flex flex-column p-0 justify-content-between">
                <div class="p-1 p-highRes-2vw d-flex flex-column">
                    {% if cart.lineItems|length %} {% for item in cart.lineItems %} {% set product = item.purchasable %}
                    <a href="{{product.product.url}}" role="button" class="cart-item mb-2 pb-2 border-bottom border-cust-lightGrey d-flex flex-column flex-md-row justify-content-between align-items-end">
                        <div>
                            <p class="h3-style cart-item-title m-0">{{ product.product.title }} ({{ product.title }})</p>
                            <p class="m-0">{{ item.sku }}</p>
                            <p class="m-0">{{ item.priceAsCurrency}} exc GST - Qty: {{ item.qty}}</p>
                        </div>
                        <div>
                            <p class="m-0">{{ item.subtotalAsCurrency }} exc GST </p>
                        </div>
                    </a>
                    {% endfor %} {% else %}
                        <p>Your cart is empty.</p>
                    {% endif %}
                </div>
                <div>
                    <div class="p-1 p-highRes-2vw">
                        <h3 class="m-0 d-flex flex-row justify-content-between align-items-center"><span>Your total:</span> 
                        {{ cart.itemSubtotalAsCurrency }} exc. GST</h3>
                    </div>
                    <div class="d-flex flex-row justify-content-between align-items-center p-1 p-highRes-2vw border-top border-primary">
                        <button type="button" class="btn btn-cust-teal" data-bs-dismiss="modal">Continue shopping</button>
                        <a href="{{ url('/shop/cart') }}" role="button" class="btn btn-cust-red text-light">Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
