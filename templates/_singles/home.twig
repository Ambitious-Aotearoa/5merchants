{% extends "_layout.twig" %} 
{% set bodyAttributes ={ class: "home" } %} 
{% set docTitle = entry.title %} 
{# {% set metaDesc = entry.metaDescription %}  #}

{% set page = craft.entries().section('home').all() %} 
{% set bDT = craft.entries().section('blowerDoorTesting').all() %} 
{% set hPA = craft.entries().section('homePerformanceAudits').all() %} 
{% set ventilation = craft.entries().section('ventilation').all() %} 
{% set windows = craft.entries().section('windows').all() %} 
{% set blogs = craft.entries().section('newsEntry')%}

  {% block head %}
  {{ parent() }}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>
  {% endblock %}

{% block content %} 
    {% for entry in page %} 
    <div class="d-flex flex-column flex-sm-row">
        <div class="col col-12 col-sm-6 col-md-4 red-group container-one">
            {% if entry.heading %}
                <h1 class="mb-vw-md">{{entry.heading}}</h1>
            {% endif %}
            {% if entry.bodyText %}
                <div>{{entry.bodyText}}</div>
            {% endif %}
            {% if entry.buttonLink %}
                <div class="underline-btn">
                    <a href="{{ entry.buttonLink }}" role="button">{{ entry.buttonText }}</a>
                </div>
            {% endif %}
        </div>
        <div class="col col-12 col-sm-6 col-md-8 img-fit-wrapper">
            {% set img = entry.image.one() %}
            {% if img %}
                <img src="{{img.getUrl}}" alt="{{img.alt}}" class="img-fit">
            {% endif %}
        </div>
    </div>

    <div class="d-flex flex-column flex-sm-row flex-sm-wrap">
        <div class="col col-12 col-sm-6 img-fit-wrapper add-height  d-md-none">
            {% set img2 = entry.image2.one() %}
                {% if img %}
                    <img src="{{img2.getUrl}}" alt="{{img2.alt}}" class="img-fit">
            {% endif %}
        </div>
        <div class="col col-12 col-sm-6 col-md-12">
            <div class="d-flex flex-column flex-sm-row flex-sm-wrap">
                <div class="col col-12  col-md-4 black-group container-one d-flex flex-column justify-content-between">
                    {% if entry.heading2 %}
                        <h2 class="mb-vw-lg">{{entry.heading2}}</h2>
                    {% endif %}
                    <div>
                        {% if entry.bodyText2 %}
                            <div>{{entry.bodyText2}}</div>
                        {% endif %}

                        {% if entry.buttonLink2 %}
                            <div class="underline-btn">
                                <a href="{{ entry.buttonLink2 }}" role="button">{{ entry.buttonText2 }}</a>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col col-12 col-md-4 img-fit-wrapper add-height d-none d-md-block">
                {% set img2 = entry.image2.one() %}
                    {% if img %}
                        <img src="{{img2.getUrl}}" alt="{{img2.alt}}" class="img-fit">
                    {% endif %}
                </div>

                <div class="col col-12 col-md-4 bg-cust-tan container-one d-flex flex-column justify-content-between">
                    {% if entry.heading3 %}
                         <h2 class="mb-vw-lg">{{entry.heading3}}</h2>
                    {% endif %}

                    <div>
                        {% if entry.bodyText3 %}
                            <div>{{entry.bodyText3}}</div>
                        {% endif %}

                        {% if entry.buttonLink3 %}
                            <div class="underline-btn">
                                <a href="{{ entry.buttonLink3 }}" role="button">{{ entry.buttonText3 }}</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include '_partials/components-svg.twig' %}



    {# <div class="col col-12 p-2 p-lg-3 p-hR-hR3">
            {% if entry.heading5 %}
            <h3>{{entry.heading5}}</h3>
        {% endif %} 
    </div> #}

    <div class="black-group d-flex flex-column flex-md-row flex-md-wrap" id="services">
        <div class="col col-12 p-2 p-lg-3 p-hR-hR3">
             {% if entry.heading6 %}
                <h2>{{entry.heading6}}</h2>
            {% endif %} 
        </div>

        <div class="col-12 d-flex flex-column flex-sm-row flex-sm-wrap px-sm-1 px-lg-2 px-hR-hR2">
            {% for entry in hPA %} 
                <a class="col col-12 col-sm-6 col-md-3 p-2 pt-sm-0 pb-sm-3 px-sm-1 pb-hR-hR3 px-hR-hR1" href="{{entry.url}}" role="button">
                    <div class="">
                        {% set img = entry.image.one() %}
                        {% if img %}
                            <div class="img-fit-wrapper four-pods">
                                <img src="{{img.getUrl}}" alt="{{img.alt}}" class="img-fit">
                            </div>
                        {% endif %}

                        {% if entry.title %}
                        <h3 class=" mt-1 mt-lg-2 mt-hR-hR2">{{entry.title}}</h3>
                        {% endif %}
                        <p>5Merchants</p>
                    </div>
                </a>
            {% endfor %} 
            {% for entry in bDT %} 
                <a class="col col-12 col-sm-6 col-md-3 p-2 pt-sm-0 pb-sm-3 px-sm-1 pb-hR-hR3 px-hR-hR1" href="{{entry.url}}" role="button">
                    <div class="">
                        {% set img = entry.image.one() %}
                        {% if img %}
                            <div class="img-fit-wrapper four-pods">
                                <img src="{{img.getUrl}}" alt="{{img.alt}}" class="img-fit">
                            </div>
                        {% endif %}
                         <h3 class="mt-1 mt-lg-2 mt-hR-hR2">{{entry.title}}</h3>
                        <p>5Merchants</p>
                    </div>
                </a>
            {% endfor %} 
            {% for entry in windows %} 
                <a class="col col-12 col-sm-6 col-md-3 p-2 pt-sm-0 pb-sm-3 px-sm-1 pb-hR-hR3 px-hR-hR1" href="{{entry.url}}" role="button">
                    <div class="">
                        {% set img = entry.image9.one() %}
                        {% if img %}
                        <div class="img-fit-wrapper four-pods">
                            <img src="{{img.getUrl}}" alt="{{img.alt}}" class="img-fit">
                        </div>
                        {% endif %}
                         {% if entry.heading5 %}
                            <h3 class=" mt-1 mt-lg-2 mt-hR-hR2">{{entry.heading5}}</h3>
                         {% endif %}
                        <p>5Merchants</p>
                    </div>
                </a>
            {% endfor %} 
            {% for entry in ventilation %} 
                <a class="col col-12 col-sm-6 col-md-3 p-2 pt-sm-0 pb-sm-3 px-sm-1 pb-hR-hR3 px-hR-hR1" href="{{entry.url}}" role="button">
                    <div class="">
                        {% set img = entry.image.one() %}
                        {% if img %}
                        <div class="img-fit-wrapper four-pods">
                            <img src="{{img.getUrl}}" alt="{{img.alt}}" class="img-fit">
                        </div>
                        {% endif %}
                         <h3 class=" mt-1 mt-lg-2 mt-hR-hR2">{{entry.title}} Design</h3>
                        <p>5Merchants</p>
                    </div>
                </a>
            {% endfor %} 
        </div>
    </div>

    <div class="teal-group d-flex flex-column flex-md-row flex-md-wrap ">
        <div class="col col-12 container-one">
            {% if entry.heading7 %}
                <h2 class="mb-2 mb-md-3 mb-hR-hR3">{{entry.heading7}}</h2>
            {% endif %} 
            <div class="bg-light-opacity">
                <div class="swiper">
                    <div class="swiper-wrapper">
                    {% for entry in blogs %}               
                        <a href="{{entry.url}}" class="swiper-slide p-3 p-hR-hR3 d-flex flex-column justify-content-between">
                            <div>
                                <h3 class="mb-2 mb-hR-hR2">{{entry.title}}</h3>
                                {{ entry.bodyText|striptags|split('.')|first }}...
                            </div>

                            <div class="underline-btn mt-2 mt-hR-hR2">
                                <p>Read more</p>
                            </div>
                        </a>
                    {% endfor %}
                    </div>
                    <div class="swiper-button-prev">
                        <svg class="arrow-left arrow" viewBox="0 0 16 16">
                            <path d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                        </svg>
                    </div>

                    <div class="swiper-button-next">
                        <svg class="arrow-right arrow" viewBox="0 0 16 16">
                            <path d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %} 
{% endblock %}

{% block scripts %}
  {{ parent() }}

    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <script type="module" src="/js/slider.js"></script>
{% endblock %}