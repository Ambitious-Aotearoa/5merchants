{% extends "_layout.twig" %} 
{% set bodyAttributes ={ class: "shipping-information basics-pages" } %} 
{% set docTitle = entry.title %} 
{# {% set metaDesc = entry.metaDescription %}  #}

{% set page = craft.entries().section('shippingInformation').all() %} 
{% block content %} 
    {% for entry in page %} 
        <div class="contained-content py-4  py-sm-vw-sm py-md-vw-xs ">
            <div class="contain d-flex flex-column flex-sm-row flex-sm-wrap">
                <div class="col col-12 col-sm-8">
                    <div class="col col-12">
                        <h1>{{entry.title}}</h1>
                    </div>
                    <div class=" col col-12 d-flex flex-column flex-sm-wrap flex-sm-row">
                        <div class="col col-12 col-md-6 pe-md-2 pe-hR-hR2">
                            {% if entry.heading %} 
                                <h2>{{entry.heading}}</h2>
                            {% endif %} 
                            {% if entry.bodyText %} 
                                <div>{{entry.bodyText}}</div>
                            {% endif %} 
                        </div>
                        <div class="col col-12 col-md-6 ps-md-2 ps-hR-hR2">
                            {% if entry.heading2 %} 
                                <h2>{{entry.heading2}}</h2>
                            {% endif %} 
                            {% if entry.bodyText2 %} 
                                <div>{{entry.bodyText2}}</div>
                            {% endif %} 
                            {% if entry.heading3 %} 
                                <h2>{{entry.heading3}}</h2>
                            {% endif %} 
                            {% if entry.bodyText3 %} 
                                <div>{{entry.bodyText3}}</div>
                            {% endif %} 
                            <div class="shipping-logos mt-2 mt-hR-hR2 px-1">
                                {% if entry.buttonLink %} 
                                    <a href="{{ entry.buttonLink }}" role="button" target="_blank">
                                    {% set img = entry.image.one() %}
                                    {% if img %}
                                        <img src="{{img.getUrl}}" alt="{{img.alt}}" class="img-fluid w-100">
                                    {% endif %}
                                    </a>
                                {% endif %}
                                {% if entry.buttonLink2 %} 
                                    <a href="{{ entry.buttonLink2 }}" role="button" target="_blank">
                                    {% set img = entry.image2.one() %}
                                    {% if img %}
                                        <img src="{{img.getUrl}}" alt="{{img.alt}}" class="img-fluid w-100">
                                    {% endif %}
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col col-12 col-sm-3 offset-sm-1 ps-md-1">
                    {% include '_partials/side-nav-terms.twig' %}
                </div>
            </div>
        </div>
    {% endfor %} 
{% endblock %}